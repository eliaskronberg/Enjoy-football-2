<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">
    <link href="~/bootstrap-table.css" rel="stylesheet" />
    <link href="~/bootstrap.css" rel="stylesheet" />
    <link href="~/css/mybasic.css" rel="stylesheet" />
    <script src="~/jquery.js"></script>
    <script src="~/jquery.validate.js"></script>
    <script src="~/jquery.validate.unobtrusive.js"></script>
    <script src="~/bootstrap.min.js"></script>
    <script src="~/bootstrap-table.js"></script>
</head>
<body>
    <div>
        <div class="container" style="padding:0px">
            @*Navbar överst*@
            <nav class="navbar navbar-inverse" style="background-color:rgba(0,0,38,0.7); border:none">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/home/index">Gött Lir</a>
                    </div>
                    <div class="collapse navbar-collapse" id="myNavbar">
                        <ul class="nav navbar-nav">
                            <li><a href="/home/index/#gameList">Find games</a></li>
                            <li><a href="/tournament/alltournaments">Tournaments</a></li>
                        </ul>
                        @{ string profileSendId = User.Identity.Name;}
                        @if (User.Identity.IsAuthenticated)
                        {
                            <ul class="nav navbar-nav navbar-right">
                                <li><a onclick="location.href='@Url.Action("getPlayerIdByName", "player", new { name = profileSendId })'"><span class="glyphicon glyphicon-user"></span> My Profile</a></li>
                                <li>
                                    <a onclick="location.href='@Url.Action("logout","account")'" href="#">
                                        <span class="glyphicon glyphicon-log-out"></span> Log out
                                    </a>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <ul class="nav navbar-nav navbar-right">
                                <li><a onclick="location.href='@Url.Action("createuser","account")'" href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                                <li>
                                    <a href="#logindrop" data-toggle="dropdown" data-target="logindrop">
                                        <span class="glyphicon glyphicon-log-in"></span> Log in
                                        <span class="caret"></span>
                                    </a>
                                    <ul class="dropdown-menu" style="width:300%" id="logindrop">
                                        <li>@Component.Invoke("Login")</li>
                                    </ul>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </nav>
        </div>
        <div id="bigbody">
            @RenderBody()
        </div>
        <footer>
            <div class="container" style="padding:0px">
                <nav class="navbar navbar-inverse" style="background-color:rgba(0,0,38,0.7); border:none; margin:0">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="/aboutus">About us</a>
                        </li>
                    </ul>
            </nav>
                </div>
        </footer>
    </div>
</body>
</html>
